 <div class="container">
 <h1 class="titre text-center">Add a task!</h1>
 <%= form_for(@task) do |f| %>
 <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control mt-3"%>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control mt-3"%>
  </div>
  <div class="form-group">
  <%= f.label :completed%>
  <%= f.check_box :completed, class: "form-control mt-3"%>
  </div>

  <%= f.submit class: "btn btn-primary"%>
<% end %>
</div>
